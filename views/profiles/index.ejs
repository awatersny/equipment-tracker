<main>
  <h1>User Profiles</h1>
  <% if (user?.profile.avatar) { %>
  <% } %>
  <ul>
    <% profiles.forEach(profile => { %>
      <a href="/profiles/<%= profile.id %>/items ">
        <li class="profile">
            <img src="<%= profile.avatar %> " alt="<%= profile.name %>'s avatar ">
            <span><%= profile.name %></span>
        </li>
    </a>
    <% }) %>
  </ul>
